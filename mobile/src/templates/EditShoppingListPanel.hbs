<legend>
    Setup a new shopping list
</legend>

<fieldset>

    <div class="uk-form-row">
        <label class="uk-form-label" for="name">Name</label>
        <div class="uk-form-controls">
            <input type="text" required="true" maxlength="20" class="uk-width-1-1" id="name" value="{{ name }}"/>
        </div>
    </div>

    <div class="uk-form-row">
        <label class="uk-form-label" for="color">Color</label>
        <div class="uk-form-controls">
            <input type="color" required="true" id="color" value="{{ color }}"/>
        </div>
    </div>

    <div data-role="footer" class="uk-form-row">
        <button type="submit" data-role="submit" class="uk-button uk-button-primary">Submit</button>
        <button type="button" data-role="cancel" class="uk-button uk-button-danger">Cancel</button>
    </div>
</fieldset>
