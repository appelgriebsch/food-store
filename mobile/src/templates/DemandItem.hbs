<label>    {{#if done}}    <input type="checkbox" class="toggle" checked></input>    {{else}}    <input type="checkbox" class="toggle"></input>    {{/if}}    {{#if quantity}}    <span data-role="qty">{{quantity}}</span>    {{#if unit}}    <span data-role="unit">{{unit}}</span>    {{else}}    <span data-role="unit">x</span>    {{/if}}    {{/if}}    <span data-role="desc">{{description}}</span>    <span data-role="options" class="uk-button-dropdown uk-visible-small uk-align-right" data-uk-dropdown="{mode:'click', justify:'#tags'}">        <button class="uk-button uk-button-link uk-visible-small"><i class="uk-icon-caret-down"></i></button>        <span class="popover uk-dropdown uk-visible-small uk-dropdown-small">            <span data-role="options">                 {{#if quantity}}                <a href=""><i class="icon-small uk-icon-plus-circle"></i></a>                <a href=""><i class="icon-small uk-icon-minus-circle"></i></a>                {{/if}}                <a href=""><i class="icon-small uk-icon-trash-o"></i></a>            </span>        </span>    </span>    <span data-role="options" class="uk-align-right uk-hidden-small">        {{#if quantity}}        <a href=""><i class="icon-tiny uk-icon-plus-circle"></i></a>        <a href=""><i class="icon-tiny uk-icon-minus-circle"></i></a>        {{/if}}        <a href=""><i class="icon-tiny uk-icon-trash-o"></i></a>    </span>    <p/>        <div class="uk-clearfix">            <span id="tags" data-role="tags">                {{#each tags}}                <span data-role="tag" class="uk-text-small">{{this}}</span>                {{/each}}            </span>        </div>    </label>
