<legend>
    Login
</legend>
<fieldset>

    <div class="uk-form-row">
        <label class="uk-form-label" for="userName">User Name</label>
        <div class="uk-form-controls">
            <input type="text" required="true" maxlength="20" class="uk-width-1-1" id="userName"/>
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="password">Password</label>
        <div class="uk-form-controls">
            <input type="password" required="true" maxlength="80" class="uk-width-1-1" id="password"/>
        </div>
    </div>

    <div data-role="footer" class="uk-form-row">
        <button type="button" data-role="login" class="uk-button uk-button-primary">Login</button>
        <button type="button" data-role="register" class="uk-button uk-button-danger">Register</button>
    </div>

</fieldset>
