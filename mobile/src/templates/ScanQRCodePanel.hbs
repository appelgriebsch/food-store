<legend>
    <span>Scan QR Code</span>
</legend>
<fieldset>

    <div class="uk-form-row">
        <label class="uk-form-label" for="QRCode">QR Code</label>
        <div class="uk-form-controls">
            <img id="imagePreview"></img>
            <canvas id="qr-canvas" class="uk-hidden"></canvas>
            <input id="imageFile" type="file" name="qrcode" accept="image/*;capture=camera" capture="camera" class="uk-hidden" />
        </div>
    </div>

    <div data-role="footer" class="uk-form-row">
        {{#if hasImage}}
            <button type="submit" data-role="capture" class="uk-button uk-button-primary uk-hidden">Capture</button>
            <button type="submit" data-role="use" class="uk-button uk-button-primary">Use</button>
        {{else}}
            <button type="submit" data-role="capture" class="uk-button uk-button-primary">Capture</button>
            <button type="submit" data-role="use" class="uk-button uk-button-primary uk-hidden">Use</button>
        {{/if}}
        <button type="button" data-role="cancel" class="uk-button uk-button-danger">Cancel</button>
        <p/>
        <label id="qrResult"></label>
    </div>
</fieldset>
