<legend>
   User Profile Data
</legend>
<fieldset>

    <div class="uk-form-row">
        <label class="uk-form-label" for="userMail">eMail</label>
        <div class="uk-form-controls">
            <input type="email" required="true" maxlength="80" class="uk-width-1-1" id="userMail" value="{{ user_mail }}"/>
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="userName">User Name</label>
        <div class="uk-form-controls">
            <input type="text" required="true" maxlength="20" class="uk-width-1-1" id="userName" value="{{ user_name }}"/>
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="realName">Name</label>
        <div class="uk-form-controls">
            <input type="text" required="true" maxlength="80" class="uk-width-1-1" id="realName" value="{{ name }}"/>
        </div>
    </div>
    {{#if isNew}}
    <div class="uk-form-row">
        <label class="uk-form-label" for="password1">Password</label>
        <div class="uk-form-controls">
            <input type="password" required="true" maxlength="20" class="uk-width-1-1" id="password1" value="{{ password }}"/>
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="password2">Verify Password</label>
        <div class="uk-form-controls">
            <input type="password" required="true" maxlength="20" class="uk-width-1-1" id="password2" value="{{ password }}"/>
        </div>
    </div>
    {{/if}}
    <div class="uk-form-row">
        <label class="uk-form-label"><i class="uk-icon-twitter uk-icon-medium"></i></label>
        <div class="uk-form-controls uk-form-width-medium">
            <span id="twitter-username" class="uk-text-small">{{ twitter.data.screen_name }}</span>
            <span class="uk-align-right">
                {{#if twitter.token}}
                    <button id="twitter-connect" class="uk-button uk-button-mini uk-hidden">Connect</button>
                    <button id="twitter-verify" class="uk-button uk-button-mini">Verify</button>
                {{else}}
                    <button id="twitter-connect" class="uk-button uk-button-mini">Connect</button>
                    <button id="twitter-verify" class="uk-button uk-button-mini uk-hidden">Verify</button>
                {{/if}}
            </span>
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label"><i class="uk-icon-facebook uk-icon-medium"></i></label>
        <div class="uk-form-controls uk-form-width-medium">
            <span id="facebook-username" class="uk-text-small">{{ facebook.data.username }}</span>
            <span class="uk-align-right">
                {{#if facebook.token}}
                    <button id="facebook-connect" class="uk-button uk-button-mini uk-hidden">Connect</button>
                    <button id="facebook-verify" class="uk-button uk-button-mini">Verify</button>
                {{else}}
                    <button id="facebook-connect" class="uk-button uk-button-mini">Connect</button>
                    <button id="facebook-verify" class="uk-button uk-button-mini uk-hidden">Verify</button>
                {{/if}}
            </span>
        </div>
    </div>

    <div data-role="footer" class="uk-form-row">
        <button type="submit" data-role="submit" class="uk-button uk-button-primary">Submit</button>
        <button type="button" data-role="cancel" class="uk-button uk-button-danger">Cancel</button>
    </div>

</fieldset>
