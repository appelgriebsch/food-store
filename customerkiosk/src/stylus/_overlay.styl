.overlay
  position: absolute
  top: 0
  left: 0

  width: 100%
  height: 100%

  background: rgba(black, 0.75)
  z-index: 150

  display: none
  opacity: 0
  transition: all 0.3s ease-out
  &.visible
    display: block
  &.visible-faded-in
    opacity: 1

.overlay-content
  background: white
  border-radius: 3px

  width: 450px
  height: 550px

  padding: 30px

  position: absolute
  left: 50%
  top: 50%

  margin-top: 550px * -0.5
  margin-left: 450px * -0.5

  .loading
    position: absolute
    top: 0
    left: 0

    width: 100%
    height: 100%

    background: white url("/images/loading.gif") center center no-repeat

    display: none
    opacity: 0
    transition: all 0.3s ease-out
    &.visible
      display: block
    &.visible-faded-in
      opacity: 1

.overlay-box
  border-radius: 3px
  background: #FAFAFA

  box-shadow: 0 0 0 1px rgba(black, 0.15) inset, 0 1px 3px 0 rgba(black, 0.2) inset

  margin-bottom: 10px

  overflow: hidden

  transition: opacity 0.3 ease-out
  &.disabled
    pointer-events: none
    opacity: 0.5

.overlay-buttons
  text-align: right
  font-size: 0

  input
    margin-right: 15px

    &:last-child
      margin-right: 0
