.sharing-text-box
  height: 173px

  position: relative

.sharing-list-box
  height: 260px
  overflow-y: auto
  li
    width: 50%

    float: left

    padding: 15px 20px

    border-color: #DDDDDD
    border-width: 0 1px 1px 0
    border-style: solid

    overflow: hidden
    white-space: nowrap

    cursor: pointer

    &:nth-child(2n)
      border-right-width: 0

    &:hover
      background: rgba(black, 0.05)

    &.active
      background: url("/images/icon-tick-blue.png") no-repeat 155px 15px

.sharing-text-bar
  border-top: 1px solid #DDDDDD
  height: 50px

  position: absolute
  bottom: 0

  width: 100%

#sharing-text
  color: #4A4A4A
  font-size: 16px
  padding: 20px

.sharing-bar-buttons
  float: right
  font-size: 0
  > div
    width: 50px
    height: 54px

    display: inline-block

    background: #D6D6D6 linear-gradient(top, rgba(white, 0.28), rgba(black, 0.22))

    box-shadow: 1px 0 0 0 rgba(black, 0.17) inset

    cursor: pointer

    &:hover
      background: #B7B7B7 linear-gradient(top, rgba(white, 0.17), rgba(black, 0.09))

  .sharing-button-left > div
    position: relative
    &:after
      right: 0
      top: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border-color: transparent
      border-right-color: #616161
      border-width: 10px
      margin-top: 13px
      margin-right: 20px

  .sharing-button-right > div
    position: relative
    &:after
      left: 0
      top: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none
      border-color: transparent
      border-left-color: #616161
      border-width: 10px
      margin-top: 13px
      margin-left: 20px

.sharing-bar-networks
  padding: 18px 15px
  font-size: 16px
  display: inline-block

  color: #4A4A4A
  label
    margin-right: 25px
    display: inline-block

    input
      float: left
      margin-top: 1px
      margin-right: 12px

    &.disabled
      opacity: 0.5

