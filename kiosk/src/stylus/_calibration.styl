#calibration-index
  h1
    text-align: center
    color: white
    font-size: 60px
    margin-top: 40px

  #calibration
    width: 700px
    height: 150px

    position: absolute
    top: 50%
    left: 50%

    margin-left: -350px
    margin-top: -75px

    opacity: 0
    transition: opacity 0.3s ease-out
    &.visible
      opacity: 1

  #calibration-done
    @extend .box
    @extend .bold

    background: url("/images/calibration-box.png")
    height: 160px

    font-size: 36px
    color: primary_font_color

    text-align: center
    padding-top: 60px

  #calibration-reset
    color: white
    text-align: center

    font-size: 24px
    margin-top: 20px

  #calibration-done-link
    display: block
    width: 100%
    height: 100%
