.box, .box-dark
  width: box_size px
  height: box_size px

  box-shadow: 0 0 30px rgba(black, 0.5)

  display: inline-block
  overflow: hidden

  border-radius: 9px

.recipe, .step, .cover
  background: url("/images/recipe-image-box.png") no-repeat center center
  background-size: cover

  margin-right: 80px
  padding: 27px

  position: relative
  transition: transform 0.3s ease-out

  &.highlighted
    transform: translateY(-30px)

  &:last-child
    margin-right: 0

  .recipe-image, .step-image, .cover-image
    width: 100%
    height: 540px

    border-radius: 8px 8px 0 0
    background-size: cover

.ingredients, .step-text
  background: url("/images/recipe-box.png") no-repeat center center
  background-size: cover

  margin-right: 80px

  h1
    font-size: 48px
    color: primary_font_color
    line-height: 100px
    padding-top: 10px
    text-align: center

    border-bottom: 2px solid rgba(black, 0.1)

  &:last-child
    margin-right: 0
