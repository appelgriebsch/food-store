$pointerSize = 80
.pointer
  position: absolute
  top: 0
  left: 0

  padding: 3px

  width: $pointerSize px
  height: $pointerSize px

  margin-left: $pointerSize*-0.5 px
  margin-top: $pointerSize*-0.5 px

  background: rgba(black, 0.5)
  border-radius: 50%

  border: 3px solid black

  opacity: 0
  transition: opacity 0.5s ease-out
  &.visible
    opacity: 1

.pointer-canvas
  width: 100%
  height: 100%


