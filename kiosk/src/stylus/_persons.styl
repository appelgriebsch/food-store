#persons-control
  background: url("/images/circle.png") no-repeat center center;

  width: 505px
  height: 505px

  position: absolute
  top: 50%
  left: 50%
  margin-top: -253px
  margin-left: -253px

  z-index: 100

  box-shadow: 0 0 30px rgba(black, 0.5)

  border-radius: 50%

  text-align: center
  color: #505050
  padding-top: 100px

  opacity: 0
  transition: all 0.3s ease-out
  &.visible
    opacity: 1

#persons
  font-size: 200px

#persons-text
  font-size: 58px
